<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_post"
    android:paddingTop="16dp"
    android:elevation="2dp"
    >
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_4"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cons_1" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_avt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_profile"
            app:shapeAppearanceOverlay="@style/round_avt_cirle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Nguyễn Văn A"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_avt"
            app:layout_constraintTop_toTopOf="@+id/image_avt" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/03/2024"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_optionmenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"
            android:text="DẪN LỐI TẬN HƯỞNG ĐỘC BẢN CÙNG MAGNUM x VIETMAX
MAGNUM kết hợp với Việt Max tạo nên Bespoke Pleasure Box - tuyệt tác truyền cảm hứng cho những Người Tiên Phong Tận Hưởng thể hiện phong cách độc bản của mình.
💛Lối tận hưởng Phá Cách - Sáng tạo, Độc Đáo, Khác Biệt…"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ic_edit"
            app:layout_constraintTop_toBottomOf="@+id/ic_edit" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_post"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons_1"
        />
    <LinearLayout
        android:id="@+id/lnr_like_cmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_post"
        >
        <TextView
            android:id="@+id/tv_count_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:text="0 lượt thích"
            android:textColor="@color/gray_5"
            />
        <TextView
            android:id="@+id/tv_count_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 bình luận"
            android:gravity="right"
            android:textSize="16sp"
            android:paddingEnd="10dp"
            android:textColor="@color/gray_5"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/gray_4"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnr_like_cmt" />

    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thích"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray_5"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_like_default"
            />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray_5"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_comment_default"
            />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chia sẻ"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray_5"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_share"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
