<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="always"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.search.fragment.SearchAllFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- User -->
        <TextView
            android:id="@+id/tv_title_everybody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mọi người"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_everybody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_result_search_friend"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="3"
            app:spanCount="1"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_see_all_everybody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_btn_profile_2"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:layout_margin="10dp"
            android:text="Xem tất cả"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_4"
            android:visibility="visible"
            />
        <!-- Group -->
        <TextView
            android:id="@+id/tv_title_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhóm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_result_search_group"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="3"
            app:spanCount="1"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_see_all_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_btn_profile_2"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:layout_margin="10dp"
            android:text="Xem tất cả"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_4"
            android:visibility="visible"
            />
        <!-- Page -->
        <TextView
            android:id="@+id/tv_title_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_result_search_page"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="3"
            app:spanCount="1"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_see_all_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_btn_profile_2"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:layout_margin="10dp"
            android:text="Xem tất cả"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_4"
            android:visibility="visible"
            />
        <!-- Posts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_post"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:itemCount="1"
            app:spanCount="1"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>