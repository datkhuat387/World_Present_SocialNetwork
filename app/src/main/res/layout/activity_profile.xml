<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.profile.ProfileActivity">
    <LinearLayout
        android:id="@+id/ln_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nguyễn Văn A"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/img_back2"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back"
            android:visibility="invisible"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_toolBar">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsw_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="always"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/img_cover"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/gray_4"
                        android:scaleType="centerCrop" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:layout_marginTop="70dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape_avatar"
                        android:src="@drawable/avatar_profile"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/lnr_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingHorizontal="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">
                    <TextView
                        android:id="@+id/tv_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn A"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_friend_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,5K bạn bè"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnr_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingStart="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lnr_name">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_addFriend"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="10sp"
                        android:paddingHorizontal="15sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/shape_btn_profile"
                        android:drawableStart="@drawable/ic_add_friend"
                        android:text=" Thêm bạn bè"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_btn_profile_2"
                        android:text=" Nhắn tin"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_chat"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_extend"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/shape_btn_profile_2"
                        android:text="•••"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/gray_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lnr_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">
                    <LinearLayout
                        android:id="@+id/ln_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/item_post"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <View
                                android:id="@+id/view_bg_item_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_item_profile_btn"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:text="Bài viết"
                                android:textColor="@color/blue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/view_bg_item_1"
                                app:layout_constraintEnd_toEndOf="@+id/view_bg_item_1"
                                app:layout_constraintStart_toStartOf="@+id/view_bg_item_1"
                                app:layout_constraintTop_toTopOf="@+id/view_bg_item_1"
                                app:layout_constraintVertical_bias="0.485" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/item_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/view_bg_item_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_item_profile_btn"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:text="Ảnh"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/view_bg_item_2"
                                app:layout_constraintEnd_toEndOf="@+id/view_bg_item_2"
                                app:layout_constraintHorizontal_bias="0.47"
                                app:layout_constraintStart_toStartOf="@+id/view_bg_item_2"
                                app:layout_constraintTop_toTopOf="@+id/view_bg_item_2"
                                app:layout_constraintVertical_bias="0.485" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/item_reels"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <View
                                android:id="@+id/view_bg_item_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_item_profile_btn"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_reels"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:text="Reels"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/view_bg_item_3"
                                app:layout_constraintEnd_toEndOf="@+id/view_bg_item_3"
                                app:layout_constraintHorizontal_bias="0.49"
                                app:layout_constraintStart_toStartOf="@+id/view_bg_item_3"
                                app:layout_constraintTop_toTopOf="@+id/view_bg_item_3"
                                app:layout_constraintVertical_bias="0.485" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
