<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.group.manage.ManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý nhóm"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Lưu"
            android:visibility="invisible"
            android:layout_marginEnd="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cần xét duyệt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_request_membership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yêu cầu làm thành viên"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lối tắt công cụ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_everybody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mọi người"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_setting_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt nhóm"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        />
</LinearLayout>